{
    // testedfiles: Ldap.ycp
    include "testsuite.ycp";
    map READ = $[
	"target" : $[
	    "tmpdir" : "/tmp",
	    "stat" : $[],
	],
    ];
    TESTSUITE_INIT ([READ], 0);
    import "Testsuite";
    import "Ldap";

    map template	= $[
	"suseDefaultValue"	: [
	    "homeDirectory=/home/%uid",
	    "loginShell=/bin/bash",
	    "testvalue=first=second",
	    "novalue"
	]
    ];
    Testsuite::Test (``(Ldap::ConvertDefaultValues (template)), [READ], 0);
}

