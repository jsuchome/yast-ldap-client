 *  Jiri Suchomel <jsuchome@suse.cz>
 *  $Id$
 */

{

    include "testsuite.ycp";
    import "Ldap";

    map READ = $[
	"etc": $[
	    "ldap_conf" : $[
		"v" : $[
		    "/etc/ldap.conf": $[
			"host" : nil,
			"base" : "dc=suse,dc=cz",
			"nss_base_passwd" : nil,
		    ]
		]
	    ],
	]
    ];

    TEST(``(Ldap::ReadLdapConfEntry ("host", "localhost")), [ READ, [], [] ],0);

    TEST(``(Ldap::ReadLdapConfEntry ("base", "dc=test")), [ READ, [], [] ],0);

    TEST(``(Ldap::ReadLdapConfEntry ("nss_base_passwd", "")), [ READ,[],[]],0);
}
