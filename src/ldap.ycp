/***
 * <h3>Configuration of the ldap</h3>
 */

{

    textdomain "ldap-client";

    import "Require";
    import "Popup";

    include "ldap/wizards.ycp";

    if (!Require::RequireAndConflict (["pam_ldap","nss_ldap"], [],
			     _("<p>To configure and access LDAP services,
the <b>%1</b> packages must be installed.<br>
Install these packages now?</p>
")))
    {
	Popup::Message(_("The configuration of the LDAP client
cannot be completed without the mentioned packages."));
	return `auto;
    }
    return LdapSequence();
}
